{
  "name": "cosdna-compare",
  "version": "2.0.0",
  "description": "Tool to compare ingredients for different products on CosDNA Edit",
  "main": "cosdna.js",
  "scripts": {
    "test": "echo `Error: no test specified` && exit 1",
    "build:bookmarklet": "bookmarklet bookmarklet.js bookmarklet",
    "build:sass": "node-sass ./*.scss -o .",
    "watch:sass": "npm run build:sass -- --watch --source-map true --source-map-embed true.",
    "build": "run-p build:sass build:bookmarklet",
    "watch": "run-p watch:sass",
    "serve": "live-server --host=localhost --no-browser --quiet --port=8080",
    "dev": "run-p build:* watch:* serve",
    "start": "npm run dev"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ytilis/CosDNA_Compare.git"
  },
  "author": {
    "name": "Yury Tilis",
    "email": "ytilis@gmail.com",
    "url": "http://yury.tilis.net/"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ytilis/CosDNA_Compare/issues"
  },
  "homepage": "https://github.com/ytilis/CosDNA_Compare#readme",
  "devDependencies": {
    "bookmarklet": "git://github.com/ytilis/bookmarklet.git#load-once",
    "live-server": "^1.2.0",
    "node-sass": "^4.7.2",
    "npm-run-all": "^4.1.2"
  }
}
